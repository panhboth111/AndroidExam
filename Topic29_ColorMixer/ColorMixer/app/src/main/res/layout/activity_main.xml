<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <SeekBar
            android:layout_width="230dp"
            android:max="255"
            android:layout_height="35dp"
            android:id="@+id/alpha" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintVertical_bias="0.158"/>
    <SeekBar
            android:layout_width="225dp"
            android:max="255"
            android:layout_height="37dp"
            android:id="@+id/red" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintVertical_bias="0.435"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="399dp"
            android:layout_height="167dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="1.0" android:id="@+id/linearLayout">
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/bt1" android:layout_weight="1"
                android:onClick="getButton"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/bt2" android:layout_weight="1"
                android:onClick="getButton"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/bt3" android:layout_weight="1"
                android:onClick="getButton"/>
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/bt4" android:layout_weight="1"
                android:onClick="getButton"/>
    </LinearLayout>
    <SeekBar
            android:layout_width="225dp"
            android:max="255"
            android:layout_height="37dp"
            android:id="@+id/green" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintVertical_bias="0.253"/>
    <SeekBar
            android:layout_width="225dp"
            android:max="255"
            android:layout_height="37dp"
            android:id="@+id/blue" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintVertical_bias="0.343"/>
</androidx.constraintlayout.widget.ConstraintLayout>